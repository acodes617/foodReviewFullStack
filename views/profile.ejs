<!doctype html>
<html>
<head>
    <title>FOOD REVIEW!</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
   
    <script src="https://kit.fontawesome.com/b1767921c9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="profilestyle.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    
    <% if (user.local.email) { %>
          
      <input type="text" placeholder="Search For Recipe Here!" name="msg" id="lookUp" class ="lookup">
    <button id="submit" class ="submit">Submit</button>
   

  <% } %>

  <div id ="displayHere"></div>
  <h2 id ="finalRecipe"></h2>
  
    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6" id ="allergies">
          <h3 class ="ingredients">INGREDIENTS</h3>
           <ul class="messages">
            <% for(let i=0; i<messages.length; i++) {%>
              <% if(messages[i].favorite===false && messages[i].needsWork===false){ %>
              <li class="message">
                <span><%= messages[i].recipe %></span>
                <span><i class="fa-solid fa-star" aria-hidden="true"></i></span>
                <span><i class="fa-solid fa-star-half-stroke" aria-hidden="true"></i></span>
                <span><i class="fa fa-ban" aria-hidden="true"></i></span>
              </li>
            <% } %>
            <% } %>
            </ul>
            </div>
            
        <div class="col-sm-6" id ="needWork">
          <h3 class ="needswork">NEEDS WORK</h3>
           <ul class="messages needsworksection">
              <% for(let i=0; i<messages.length; i++) {%>
                <% if(messages[i].needsWork===true){ %>
                <li class="message">
                  <span><%= messages[i].recipe %></span>
                  <span><i class="fa fa-ban" aria-hidden="true"></i></span>
                </li>
              <% } %>
              <% } %>
    
            </ul>
            </div>

        <div class="col-sm-6" id ="favorites">
          <h3 class ="favorites">FAVORITES</h3>
           <ul class="messages favoriteIngredients">
            <% for(let i=0; i<messages.length; i++) {%>
              <% if(messages[i].favorite===true){ %>
              <li class="message">
                <span><%= messages[i].recipe %></span>
                <span><i class="fa fa-ban" aria-hidden="true"></i></span>
              </li>
            <% } %>
            <% } %>
            </ul>
          </div>


</div>

<script src="main.js"></script>

</body>
</html>
